{
  "name": "station-health-monitor",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
     "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
  "build": "tsc",
  "start": "node dist/server.js",
  "test": "vitest run",
  "lint": "eslint .",
  "build:ui": "cd station-health-ui && npm install && npm run build",
  "build:all": "npm run build:ui && npm run build",
  "start:all": "npm run build:all && npm start"
  },
  "dependencies": {
    "cors": "^2.8.6",
    "express": "^4.19.2",
    "pino": "^9.3.2",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}
